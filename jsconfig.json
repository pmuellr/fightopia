{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "Node",
    "target": "es6",
    "checkJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "node_modules"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
